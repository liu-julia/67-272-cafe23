<h5>Generate Employee Payroll</h5>
<%= form_with url: employee_payroll_path, method: :get do |form| %>
    <div>
    <%= form.label :employee_id %>
    <%= form.collection_select :employee_id, Employee.alphabetical.active, :id, :name, prompt: true %>
    </div>

    <div>
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
    </div>

    <div>
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
    </div>

  <%= form.submit "Generate Payroll", :class => "btn"%>
 
<% end %>